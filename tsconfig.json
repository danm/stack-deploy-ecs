{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2018",
    "noImplicitAny": true,
    "noEmitOnError": true,
    "declaration": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "outDir": "lib",
    "baseUrl": ".",
    "useUnknownInCatchVariables": false,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "exclude": ["node_modules/*"],
  "include": ["src/**/*"]
}
